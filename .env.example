WANDB_ENTITY=your_wandb_entity

# Data Configuration
DATA_DIR=./data
RAW_DATA_DIR=./data/raw
PROCESSED_DATA_DIR=./data/processed
EVAL_DATA_DIR=./data/eval

# System Configuration
CUDA_VISIBLE_DEVICES=0
PYTORCH_CUDA_ALLOC_CONF=max_split_size_mb:512
